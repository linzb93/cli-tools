{
  "compilerOptions": {
    "target": "es6",
    "types": ["node"],
    "module": "ESNext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "paths": {
        "@/*":["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}