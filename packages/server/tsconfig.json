{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "./dist/",
        "baseUrl": "./src",
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["*"],
            "@cli-tools/shared/*": ["../../shared/src/*"]
        },
        "skipLibCheck": true,
        "types": ["node"]
    },
    "include": ["src/**/*", "env.d.ts"],
    "exclude": ["**/__tests__/**/*", "node_modules/**/*", "../../node_modules/**/*"]
}
