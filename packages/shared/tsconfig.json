{
    "compilerOptions": {
        "target": "ES2015",
        "module": "preserve",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "rootDir": ".",
        "outDir": "./dist/",
        "baseUrl": "./src",
        "noEmit": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["*"],
            "@cli-tools/shared/*": ["./*"]
        }
    },
    "include": ["src/**/*", "env.d.ts"],
    "exclude": ["**/__tests__/**/*"]
}
